  // GameMaker 2 course routing:
  // Create Content/Maps/course_routes.json with { activeCourse, courses:{} }.
  // Launch executable with a course id argument to override activeCourse.
  // Example arg: course_2

  // =========================
  // Core timing + playfield
  // =========================
  "audioPath": "Content/Audio/song.ogg",
  "targetFps": 120,            // 60, 120, 240, 360...
  "keyboardMoveSpeed": 130,    // WASD fixed movement speed (px/sec)
  "approachMs": 900,
  "circleRadius": 42,
  "globalOffsetMs": 0,
  "cursorHitboxRadius": 4,
  "numberCycle": 5,
  "showNumbers": true,

  // =========================
  // Health tuning (JSON refs)
  // =========================
  "maxLives": 100,
  "bulletHitDamage": 22,
  "lifeGainStepScore": 350,
  "lifeGainAmount": 4,

  // Wave passability helper
  "autoBalanceWaves": true,
  "waveSafetyMargin": 8,

  // =========================
  // Background visuals
  // =========================
  "backgroundTopColor": "#122034",
  "backgroundBottomColor": "#080D16",
  "backgroundAccentColor": "#274268",
  "backgroundGridAlpha": 0.2,

  // Optional full-screen background image (jpg/png)
  // "backgroundImagePath": "Content/Images/stage_full.jpg",
  // "backgroundImageAlpha": 1.0,
